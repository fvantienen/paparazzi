<!DOCTYPE module SYSTEM "module.dtd">

<module name="ctrl_windtunnel" dir="ctrl">
  <doc>
    <description>
        Windtunnel controller for performing step inputs on flaps and throttle.
    </description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="WindtunnelCtrl">
        <dl_setting var="ctrl_windtunnel_steptime"        min="0.1" step="0.1" max="120" module="ctrl/ctrl_windtunnel" shortname="steptime"/>
        
        <dl_setting var="ctrl_windtunnel_throttle.min"    min="0" step="100" max="9600" module="ctrl/ctrl_windtunnel" shortname="thr_min"/>
        <dl_setting var="ctrl_windtunnel_throttle.max"    min="0" step="100" max="9600" module="ctrl/ctrl_windtunnel" shortname="thr_max"/>
        <dl_setting var="ctrl_windtunnel_throttle.step"   min="0" step="100" max="9600" module="ctrl/ctrl_windtunnel" shortname="thr_step"/>

        <dl_setting var="ctrl_windtunnel_flaps.min"    min="-9600" step="100" max="9600" module="ctrl/ctrl_windtunnel" shortname="flaps_min"/>
        <dl_setting var="ctrl_windtunnel_flaps.max"    min="-9600" step="100" max="9600" module="ctrl/ctrl_windtunnel" shortname="flaps_max"/>
        <dl_setting var="ctrl_windtunnel_flaps.step"   min="0" step="100" max="9600" module="ctrl/ctrl_windtunnel" shortname="flaps_step"/>
      </dl_settings>
    </dl_settings>
  </settings>

  <header>
    <file name="ctrl_windtunnel.h"/>
  </header>

  <makefile>
    <file name="ctrl_windtunnel.c"/>
    <raw>
      ap.CFLAGS += -DGUIDANCE_V_MODE_MODULE_SETTING=GUIDANCE_V_MODE_HOVER
      ap.CFLAGS += -DGUIDANCE_H_MODE_MODULE_SETTING=GUIDANCE_H_MODE_MODULE
    </raw>
  </makefile>

</module>

