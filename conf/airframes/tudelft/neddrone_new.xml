<!DOCTYPE airframe SYSTEM "../airframe.dtd">

<!-- this is a quadrotor frame in X-configuration equipped with
     * Autopilot:   Pixhawk
     * Actuators:   4x Swellpro ESC + Motors
     * Datalink:    Xbee Pro S1
     * GPS:         UBlox M8N
     * RC:          SBUS X4R
-->

<airframe name="Neddrone">
  <description>Neddrone</description>

  <firmware name="rotorcraft">
    <target name="ap" board="px4fmu_5.0_chibios">
      <configure name="PERIODIC_FREQUENCY"  value="500"/>
      <module name="telemetry"     type="transparent">
        <configure name="MODEM_BAUD" value="B115200"/>
      </module>
      <module name="imu" type="mpu6000"/>
      <module name="gps"           type="ublox">
        <configure name="GPS_PORT" value="UART4"/>
      </module>
      <module name="gps"           type="ubx_ucenter"/>
      <module name="stabilization" type="int_quat"/>
      <module name="stabilization" type="rate"/>
      <module name="ins" type="ekf2" />
      <module name="air_data"/>
      <module name="send_imu_mag_current"/>
      <module name="gain_scheduling"/>

      <!-- internal-->
      <!--module name="mag_ist8310">
        <define name="MODULE_IST8310_UPDATE_AHRS" value="TRUE"/>
        <configure name="MAG_IST8310_I2C_DEV" value="I2C3"/>
      </module-->
      <!-- external-->
      <module name="mag_lis3mdl">
        <define name="MODULE_LIS3MDL_UPDATE_AHRS" value="TRUE"/>
        <configure name="MAG_LIS3MDL_I2C_DEV" value="I2C4"/>
      </module>
      <module name="lidar" type="tfmini"/>

      <module name="guidance" type="hybrid"/>
      <module name="intermcu" type="uart"/>
      <!--module name="px4_flash"/-->

      <!-- Logger -->
      <module name="tlsf"/>
      <module name="pprzlog"/>
      <module name="logger" type="sd_chibios"/>
      <module name="flight_recorder"/>
    </target>

    <target name="fbw" board="px4io_2.4">
      <module name="radio_control" type="sbus"/>
      <module name="motor_mixing"/>
      <module name="actuators" type="pwm">
        <define name="SERVO_HZ" value="400"/>
      </module>
      <module name="actuators" type="sbus"/>
      <module name="intermcu" type="uart"/>

      <!--define name="FBW_MODE_AUTO_ONLY" value="true"/-->
      <define name="RC_LOST_FBW_MODE" value="FBW_MODE_FAILSAFE" />
      <!-- Switch to Failsafe or to Autopilot on RC loss? -->
      <define name="RC_LOST_IN_AUTO_FBW_MODE" value="FBW_MODE_AUTO" />
      <define name="AP_LOST_FBW_MODE" value="FBW_MODE_FAILSAFE" />
      <!-- Switch to Failsafe or to Manual on AP loss? -->
    </target>

    <target name="nps" board="pc">
      <module name="radio_control" type="spektrum"/>
      <module name="fdm" type="jsbsim"/>
    </target>

   
  </firmware>

  <servos driver="Pwm">
    <servo name="MOTOR_1" no="0" min="1000" neutral="1150" max="1900"/>
    <servo name="MOTOR_2" no="1" min="1000" neutral="1150" max="1900"/>
    <servo name="MOTOR_5" no="2" min="1000" neutral="1150" max="1900"/>
    <servo name="MOTOR_6" no="3" min="1000" neutral="1150" max="1900"/>
    <servo name="MOTOR_7" no="4" min="1000" neutral="1150" max="1900"/>
    <servo name="MOTOR_8" no="5" min="1000" neutral="1150" max="1900"/>
    <servo name="MOTOR_11" no="6" min="1000" neutral="1150" max="1900"/>
    <servo name="MOTOR_12" no="7" min="1000" neutral="1150" max="1900"/>
  </servos>

  <servos driver="Sbus">
    <servo name="MOTOR_3"  no="0" min="1000" neutral="1150" max="1900"/>
    <servo name="MOTOR_4" no="1" min="1000" neutral="1150" max="1900"/>
    <servo name="MOTOR_9" no="2" min="1000" neutral="1150" max="1900"/>
    <servo name="MOTOR_10" no="3" min="1000" neutral="1150" max="1900"/>
    <servo name="AIL_1" no="4" min="1900" neutral="1500" max="1100"/>
    <servo name="AIL_2" no="5" min="1100" neutral="1500" max="1900"/>
    <servo name="AIL_3" no="6" min="1100" neutral="1500" max="1900"/>
    <servo name="AIL_4" no="7" min="1900" neutral="1500" max="1100"/>
    <servo name="FLAP_1" no="8" min="1900" neutral="1500" max="1100"/>
    <servo name="FLAP_2" no="9" min="1100" neutral="1500" max="1900"/>
    <servo name="FLAP_3" no="10" min="1100" neutral="1500" max="1900"/>
    <servo name="FLAP_4" no="11" min="1900" neutral="1500" max="1100"/>
  </servos>

  <commands>
    <axis name="ROLL"   failsafe_value="0"/>
    <axis name="PITCH"  failsafe_value="0"/>
    <axis name="YAW"    failsafe_value="0"/>
    <axis name="THRUST" failsafe_value="0"/>
  </commands>

  <rc_commands>
    <set command="THRUST" value="@THROTTLE" />
    <set command="ROLL" value="@YAW" />
    <set command="PITCH" value="@PITCH/2" />
    <set command="YAW" value="-@ROLL/4" />
  </rc_commands>

  <section name="MIXING" prefix="MOTOR_MIXING_">
    <!-- frontleft left (CW), frontleft mid (CW), frontleft right (CCW), frontright left (CW), frontright mid (CCW), frontright right (CCW) -->
    <!-- backright right (CCW), brackright mid (CW), brackright left (CCW), backleft right (CW), backleft mid (CCW), backleft left (CW) -->
    <define name="NB_MOTOR"    value="12"/>
    <define name="SCALE"       value="256"/>
    <define name="ROLL_COEF"   value="{  95,   61,   26,  -26,  -61,  -95,  -95,  -61,  -26,   26,   61,   95}"/>
    <define name="PITCH_COEF"  value="{ 252,  252,  252,  252,  252,  252, -252, -252, -252, -252, -252, -252}"/>
    <define name="YAW_COEF"    value="{ 0,   -256,  256, -256,  256,    0,    0, -256,  256, -256,  256,    0}"/>
    <define name="THRUST_COEF" value="{ 256,  256,  256,  256,  256,  256,  256,  256,  256,  256,  256,  256}"/>
  </section>

  <command_laws>
    <call fun="motor_mixing_run(fbw_motors_on,FALSE,values)"/>
    <let var="th_hold"     value="LessThan(RadioControlValues(RADIO_TH_HOLD), -4800)"/>
    <let var="fwd_hold"    value="RadioControlValues(RADIO_FMODE)> 4800"/>

    <set servo="MOTOR_1"   value="($th_hold? -9600 : motor_mixing.commands[0])"/>
    <set servo="MOTOR_2"   value="(($th_hold || $fwd_hold)? -9600 : motor_mixing.commands[1])"/>
    <set servo="MOTOR_3"   value="(($th_hold || $fwd_hold)? -9600 : motor_mixing.commands[2])"/>
    <set servo="MOTOR_4"   value="(($th_hold || $fwd_hold)? -9600 : motor_mixing.commands[3])"/>
    <set servo="MOTOR_5"   value="(($th_hold || $fwd_hold)? -9600 : motor_mixing.commands[4])"/>
    <set servo="MOTOR_6"   value="($th_hold? -9600 : motor_mixing.commands[5])"/>
    <set servo="MOTOR_7"   value="($th_hold? -9600 : motor_mixing.commands[6])"/>
    <set servo="MOTOR_8"   value="(($th_hold || $fwd_hold)? -9600 : motor_mixing.commands[7])"/>
    <set servo="MOTOR_9"   value="(($th_hold || $fwd_hold)? -9600 : motor_mixing.commands[8])"/>
    <set servo="MOTOR_10"  value="(($th_hold || $fwd_hold)? -9600 : motor_mixing.commands[9])"/>
    <set servo="MOTOR_11"  value="(($th_hold || $fwd_hold)? -9600 : motor_mixing.commands[10])"/>
    <set servo="MOTOR_12"  value="($th_hold? -9600 : motor_mixing.commands[11])"/>
    <set servo="AIL_1"     value="-2*@PITCH + 4*@YAW"/>
    <set servo="AIL_2"     value="-2*@PITCH - 4*@YAW"/>
    <set servo="AIL_3"     value=" 2*@PITCH - 4*@YAW"/>
    <set servo="AIL_4"     value=" 2*@PITCH + 4*@YAW"/>
    <set servo="FLAP_1"    value="-2*@PITCH + 4*@YAW"/>
    <set servo="FLAP_2"    value="-2*@PITCH - 4*@YAW"/>
    <set servo="FLAP_3"    value=" 2*@PITCH - 4*@YAW"/>
    <set servo="FLAP_4"    value=" 2*@PITCH + 4*@YAW"/>
  </command_laws>

  <section name="MISC">
    <define name="NAV_CLIMB_VSPEED" value="3.5"/>
    <define name="NAV_DESCEND_VSPEED" value="-1.0"/>
    <define name="NO_RC_THRUST_LIMIT" value="TRUE"/>
  </section>

   <section name="FORWARD">
    <!--The Quadshot uses a slightly different axis system for the setpoint, to make both hovering and flying forward intuitive-->
    <define name="USE_EARTH_BOUND_RC_SETPOINT" value="TRUE"/>
    <!-- This is the pitch angle that the Quadshot will have in forward flight, where 0 degrees is hover-->
    <define name="TRANSITION_MAX_OFFSET" value="-80.0" unit="deg"/>
    <!-- For RC coordinated turns, lower because the yawing was too slow -->
    <define name="MAX_FWD_SPEED" value="20.0"/>
    <!-- For hybrid guidance -->
    <define name="MAX_AIRSPEED" value="20.0"/>
  </section>

  <section name="IMU" prefix="IMU_">
    <!-- Calibrates in the LAB outside drone -->
    <define name="ACCEL_X_NEUTRAL" value="-660"/>
    <define name="ACCEL_Y_NEUTRAL" value="27"/>
    <define name="ACCEL_Z_NEUTRAL" value="-57"/>
    <define name="ACCEL_X_SENS" value="4.4070427212938785" integer="16"/>
    <define name="ACCEL_Y_SENS" value="4.897181652884989" integer="16"/>
    <define name="ACCEL_Z_SENS" value="4.789563113649844" integer="16"/>

    <define name= "MAG_X_CURRENT_COEF" value="-1.7139708082316483"/>
    <define name= "MAG_Y_CURRENT_COEF" value="-0.7696784114750511"/>
    <define name= "MAG_Z_CURRENT_COEF" value="1.1626106815908253"/>

    <!-- Calibrated next to the ship with 4S11P NCR18650GA battery internal MAG -->
    <!--define name="MAG_X_NEUTRAL" value="-93"/>
    <define name="MAG_Y_NEUTRAL" value="-25"/>
    <define name="MAG_Z_NEUTRAL" value="174"/>
    <define name="MAG_X_SENS" value="14.77710201610711" integer="16"/>
    <define name="MAG_Y_SENS" value="15.718180602853598" integer="16"/>
    <define name="MAG_Z_SENS" value="13.288646252889206" integer="16"/-->

    <!-- Calibrated next to the ship with 4S11P NCR18650GA battery external MAG -->
    <define name="MAG_X_NEUTRAL" value="-1029"/>
    <define name="MAG_Y_NEUTRAL" value="-184"/>
    <define name="MAG_Z_NEUTRAL" value="5296"/>
